<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authScreenFragment">

    <fragment
        android:id="@+id/authScreenFragment"
        android:name="com.project.findme.auth.ui.AuthFragment"
        android:label="fragment_auth_screen"
        tools:layout="@layout/fragment_auth_screen" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.project.findme.auth.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login_user" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.project.findme.auth.ui.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register_user" />
    <action
        app:popUpTo="@id/loginFragment"
        app:popUpToInclusive="true"
        android:id="@+id/action_global_registerFragment"
        app:destination="@id/registerFragment" />
    <action
        app:popUpTo="@id/registerFragment"
        app:popUpToInclusive="true"
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment" />
</navigation>